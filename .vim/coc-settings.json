  "clangd.path": "clangd",
  "clangd.fallbackFlags": ["-std=c++20"],
  "clangd.arguments": [
    "--background-index",
    "--clang-tidy",
    "--completion-style=detailed",
    "--header-insertion=iwyu"
  ],
  "suggest.detailMaxLength": 120,
